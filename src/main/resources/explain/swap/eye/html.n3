@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix pml: <http://provenanceweb.org/ns/pml#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix list: <http://www.w3.org/2000/10/swap/list#> .
@prefix math: <http://www.w3.org/2000/10/swap/math#> .
@prefix string: <http://www.w3.org/2000/10/swap/string#> .
@prefix r: <http://www.w3.org/2000/10/swap/reason#> .
@prefix : <http://wvw.org/xai#> .
@base <http://wvw.org/xai#> .


{	?x a ?type .
	?type list:in ( r:Extraction r:Fact ) .
	?x :description ?description .
	
} => { ?x :output ?description } .


{	?inf a r:Inference .
	<> log:notIncludes { ?x r:component ?inf } .
		
} => { ?inf a :InferenceNode } .


{	?inf a :InferenceNode ;
		r:evidence ?evidences .

	( ?li
	{ 	?evidence list:in ?evidences ; :output ?html .
		( "<li>" ?html "</li>" ) string:concatenation ?li }
	?lis ) log:collectAllIn _:x .
	
	?evidences list:length ?len .
	?lis!list:length math:equalTo ?len .
	
	?inf :description ?label .
		
	?lis string:concatenation ?lisStr .
	( "<b>" ?label "</b><ul>" ?lisStr "</ul>" ) string:concatenation ?html .

} => { ?inf :output ?html } .


{	?inf a :InferenceNode .
	
	( ?x { ?x a :InferenceNode . ?x!r:evidence list:member ?inf } ?xs ) log:collectAllIn _:x .
	?xs!list:length math:equalTo 0 .
	
	?inf :output ?html

} => { <> :output ?html } .