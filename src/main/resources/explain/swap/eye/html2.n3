@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix pml: <http://provenanceweb.org/ns/pml#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix list: <http://www.w3.org/2000/10/swap/list#> .
@prefix math: <http://www.w3.org/2000/10/swap/math#> .
@prefix string: <http://www.w3.org/2000/10/swap/string#> .
@prefix r: <http://www.w3.org/2000/10/swap/reason#> .
@prefix x: <http://wvw.org/xai#> .
@base <http://wvw.org/xai#> .


{	?x a ?type .
	?type list:in ( r:Extraction r:Fact ) .
	?x x:conclusionStr ?str .
	
} => { ?x x:output ?str } .


{	?inf x:output ?html
	
} <= { ?inf a x:InferenceNode ;
		r:evidence ?evidences .

	( ?li
	{ 	?evidence list:in ?evidences ; x:output ?html .
		( "<li>" ?html "</li>" ) string:concatenation ?li }
	?lis ) log:collectAllIn _:x .
	?lis string:concatenation ?lisStr .
	
	?inf x:conclusionStr ?label ;
		x:ruleStr ?ruleStr ;
		x:sourceStr ?sourceStr ;
		x:bindingStr ?bindingStr .
	
	( ?label " , " "<br />" ) string:replace ?label2 .	
	( ?bindingStr " , " "<br />" ) string:replace ?bindingStr2 .
	
	( 	?ruleStr 
		"<div class='bindings'>" ?bindingStr2 "</div>"
		"<div class='source'>(from: " ?sourceStr ")</div>" ) string:concatenation ?infInfo .	
	
	( 	"<div class='popup'>"
			?label2 " <span class='popuplink'>(show rule)</span>"
			"<div class='popuptext'>" ?infInfo "</div>"
			"<ul>" ?lisStr "</ul>"
		"</div>" ) string:concatenation ?html .
} .